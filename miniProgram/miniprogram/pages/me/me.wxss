/* pages/me/me.wxss */
.container {
	padding: 20px;
	display: flex;
	justify-content: center;
	align-items: center;
	min-height: 100vh;
}

.custom-button {
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	gap: 3px;
	padding: 4px 10px;
	background-color: #007aff;
	border-radius: 40px;
	border: none;
}

.button-icon {
	font-family: 'SF Pro';
	font-weight: 400;
	font-size: 15px;
	line-height: 1.333;
	letter-spacing: -0.015333;
	color: #ffffff;
	text-align: center;
}

.button-text {
	font-family: 'SF Pro';
	font-weight: 400;
	font-size: 15px;
	line-height: 1.333;
	letter-spacing: -0.015333;
	color: #ffffff;
}
